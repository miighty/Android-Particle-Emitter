<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mighty.particleemitter.MainActivity"
    android:longClickable="true"
    android:contextClickable="true"
    android:clickable="true"
    android:id="@+id/view">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">


        <View android:id="@+id/red"
            android:layout_gravity="top|center"
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <View android:id="@+id/green"
            android:layout_gravity="top|center"
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <View android:id="@+id/yellow"
            android:layout_gravity="top|center"
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <View android:id="@+id/sparkle"
            android:layout_gravity="top|center"
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/yelllow_on"
                android:layout_gravity="left|bottom"
                android:background="@mipmap/ic_yellow_heart" />

        <Button
                  style="?android:attr/buttonStyleSmall"
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:id="@+id/redder_on"
                  android:layout_gravity="center_horizontal|bottom"
                  android:background="@mipmap/ic_redder_heart" />

        <Button
                  style="?android:attr/buttonStyleSmall"
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:id="@+id/red_on"
                  android:layout_gravity="right|bottom"
                  android:background="@mipmap/ic_red_heart" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/green_on"
            android:layout_gravity="left|center_vertical"
            android:background="@mipmap/ic_green_heart" />

        <Button
                  style="?android:attr/buttonStyleSmall"
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:id="@+id/sparkle_on"
                  android:layout_gravity="right|center_vertical"
                  android:background="@mipmap/ic_sparkle_heart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap Any :D"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20dp" />
    </FrameLayout>


</RelativeLayout>
